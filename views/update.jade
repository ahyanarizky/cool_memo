extends layout
block content
  .container
    .jumbotron
      .container.text-center
        h1= title
        p Edit memo
      .container
        form(method='POST', action='/update/#{data._id}')
          .form-group
            label(for='formGroupExampleInput') Memo Title
            input#formGroupExampleInput.form-control(type='text', value="#{data.title}", name='title')
          .form-group
            label(for='exampleTextarea') Content
            textarea#exampleTextarea.form-control(rows='3', type='text', value='#{data.content}', name='content')
          .form-group
            label(for='formGroupExampleInput') Tags
            input#formGroupExampleInput.form-control(type='text', value='#{data.tags}', name='tags')
          .form-group
            button.btn.btn-primary(type='submit') Create memo
