extends layout
block content
  .container
    each key in data
      .panel.panel-success
        .panel-heading
          h3.panel-title #{key.title}
        .panel-body
          | #{key.content}
          .pull-right
            .form-group
              a.btn.btn-warning(href='/update', role='button') Edit Memo
            .form-group
              a.btn.btn-danger(href='/delete', role='button') Delete Memo
        ul.list-group
          li.list-group-item Tags : #{key.tags}
